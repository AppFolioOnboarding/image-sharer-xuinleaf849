<h1>add the URL of your favorite image! </h1>

<%= form_for(@image, imagelink: images_path) do |form| %>
    <p>
      <%= form.text_field :imagelink, placeholder: 'Image Link' %>
    </p>

    <p>
      <%= form.text_field :tag_list, placeholder: 'Tag list, seperate with comma'%>
    </p>

    <p>
      <%= form.submit "Add image" %>
    </p>


<% end %>



<% if @image.errors.any? %>
    <% @image.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
<% end %>
