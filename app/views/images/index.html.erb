<%= button_to "Add new image", new_image_path, method: :get %>

<h1>Images</h1>

<table id="images_list" class="row">
  <% @images.each do |image| %>
      <tr>
        <span class="js-image-card">
          <%= link_to(image_tag(image.imagelink, class: 'image-display'), image_path(image.id), class: "js-image-link") %>
          <%= link_to 'Delete', image_path(image.id), method: :delete, data: { confirm: 'Are you sure?' } %>
          <% if image.tag_list.present? %>
              <div class="js-tag-list">
            <% image.tag_list.each do |tag| %>
                <div class='js-tag-card'> <%= link_to tag, images_path(tag: tag) %></div>
            <% end %>
            <br>
            </div>
          <% else %>
              <p></p>
          <% end %>
        </span>
      </tr>
  <% end %>
</table>



<%= button_to "Clear tag filter" , images_path, method: :get%>
